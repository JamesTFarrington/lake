#|-*- mode:lisp -*-|#
(in-package :cl-user)
(defpackage :clake.user
  (:use :cl :clake :cl-syntax)
  (:shadowing-import-from :clake
                          :directory))
(in-package :clake.user)

(use-syntax :interpol)

(task "default" ("hello" "hello.o" "dir" "name:foo"))

;; A task that print hello.
(task "hello" ()
  (echo "do task hello!"))

(defparameter cc "gcc")

(file "hello.o" ("hello.c")
  (sh #?"${cc} -c hello.c"))

(directory "dir")

(directory "foo")                       ; superseded by the next task.

(task "foo" ("bar")
  (echo "foo"))

(task "bar" ("foo")
  (echo "bar"))

;; namespace
(namespace "name"

  (task "foo" ("bar")
    (echo "name.foo"))

  (task "bar" ()
    (echo "name.bar"))

  (file "hello.o" ("hello.c")
    (sh "gcc -c hello.c")))

;; Use environment variable via roswell.
(task "home" ()
  (echo (ros:getenv "HOME")))
